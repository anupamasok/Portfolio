{% macro titleQuote(title, quote, author) %}
<div class="row text-center">
  <h1 class="sectionTitle">{{ title }}</h1>
  <p class="mx-auto pt-4 sm:w-4/6">
    “{{ quote }}” - <a class="font-light">{{ author }}</a>
  </p>
</div>
{% endmacro %} {% macro experiences(companyLink, companyLogoFilePath,
companyName, roles) %}
<div class="experience-company-outer">
  <!-- logo -->
  <div class="experience-left">
    <div>
      <div class="experience-left-logo">
        <a href="{{ companyLink }}" target="_blank" rel="noopener noreferrer">
          <img alt="content" class="experience-left-logo-img" width="500" height="600"
            src="{{ companyLogoFilePath }}" />
        </a>
      </div>
    </div>
  </div>
  <!-- Positions -->
  <div class="experience-right">
    <div class="flex lg:mb-5 lg:items-center">
      <div class="flex-grow py-2 sm:pl-6">
        <!-- Title -->
        <h1 class="font-secondary mb-1 text-3xl sm:font-semibold">
          {{ companyName }}
        </h1>
        {% for roleTitle, fromTime, tillTime, location, desc in roles -%}
        <h1 class="experience-position">{{ roleTitle }}</h1>
        <div class="mb-4 justify-start text-sm text-gray-500">
          <ion-icon name="calendar-outline" class="experience-position-sub-icon inline-flex"></ion-icon>
          <h3 class="inline-flex">{{ fromTime }} - {{ tillTime }}</h3>
          <h2 class="inline-flex sm:mx-2">|</h2>
          <ion-icon name="location-outline" class="experience-position-sub-icon inline-flex"></ion-icon>
          <h3 class="inline-flex">{{ location }}</h3>
        </div>
        {{ desc | safe }}
        {% if not loop.last -%}
        <div class="py-4"></div>
        {%- endif %} {%- endfor %}
      </div>
    </div>
  </div>
</div>
{% endmacro %}

{% macro skillSection(titleVal,icon,skills) %}
<div class="mx-auto lg:w-4/6">
  <hr class="mb-5 sm:ml-5" />
  <h1>
    <div class="inline-flex skillTitle">{{ titleVal | safe }}</div>
    <div class="inline-flex skillTitleIcon"> {{ icon | safe }}</div>
  </h1>
  <div class="grid grid-cols-1 sm:grid-cols-2 sm:gap-0 sm:py-2">
    <div>
      {% for skillName, skillCount in skills %} {% if (loop.index) <= (loop.length+1)/2 %} <div class="skillItem">
        <p>{{ skillName }}</p>
        {{ skillStar(skillCount) }}
    </div>
    {% endif %} {% endfor %}
  </div>
  <div>
    {% for skillName, skillCount in skills %} {% if (loop.index) >
    (loop.length+1)/2 %}
    <div class="skillItem">
      <p>{{ skillName }}</p>
      {{ skillStar(skillCount) }}
    </div>
    {% endif %} {% endfor %}
  </div>
</div>
<div class="py-1"></div>
</div>
{% endmacro %} {% macro skillStar(num) %}
<div class="skillStarsGroup">
  <div class="skillStars">
    {% for i in range(0, num) -%}
    <ion-icon name="heart-circle"></ion-icon>
    {%- endfor %} {% for i in range(1, 5-num+1) -%} {#
    <ion-icon name="star-outline"></ion-icon> #} {%- endfor %}
  </div>
</div>
{% endmacro %}