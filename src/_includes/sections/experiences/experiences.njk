                    <div class="sm:mx-auto text-gray-400 sm:mb-20">
                        <a href="https://drive.google.com/file/d/1-o4hhgduy7vqhjafndq7me9ydknce1qz/view?usp=sharing"
                            target="_blank" rel="noopener noreferrer" class="inline-flex sectionButton">
                            Download my Résumé <ion-icon name="code-download-outline"
                                class="translate-y-1 text-lg sm:text-2xl pl-2"></ion-icon>
                        </a>
                        <!-- sep -->
                        <div class="sm:inline-block sm:mr-2"></div>
                        <a href="mailto:anupamasokofficial@gmail.com" target="_blank" rel="noopener noreferrer"
                            class="hidden sm:inline-flex inline-flex sectionButton">
                            Get In touch with me <ion-icon name="chatbubbles-outline"
                                class="translate-y-1 text-lg sm:text-2xl pl-2"></ion-icon>
                        </a>
                    </div>
                </div>
            </div>
